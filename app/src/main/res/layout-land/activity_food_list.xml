<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FoodListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="462dp"
        android:layout_height="462dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="516dp"
        android:layout_height="462dp"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/my_recycler_view">

        <EditText
            android:id="@+id/new_food_edit_txt"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/new_food_hint"
            android:inputType="text"
            android:minHeight="48dp"
            tools:layout_editor_absoluteX="697dp"
            tools:layout_editor_absoluteY="360dp" />

        <TextView
            android:id="@+id/new_food_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_food"
            tools:layout_editor_absoluteX="730dp"
            tools:layout_editor_absoluteY="412dp" />

        <LinearLayout
            android:id="@+id/add_and_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                tools:layout_editor_absoluteX="656dp"
                tools:layout_editor_absoluteY="461dp" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                tools:layout_editor_absoluteX="760dp"
                tools:layout_editor_absoluteY="461dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>